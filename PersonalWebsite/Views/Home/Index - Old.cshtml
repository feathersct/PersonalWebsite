        }
        </section> <!-- cd-timeline -->
    </section>

    <!-- Contact Me Section -->
    <partial name="ContactMe.cshtml"/>


    <!--Footer Section-->
    <section class="footer">
        <div class="footer-wrapper">
            <div class="footer-content">
                <p>© Clayton Feathers</p>
            </div>

        </div>
    </section>
</div>