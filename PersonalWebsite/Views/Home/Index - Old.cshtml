                    <p>
                        @Model.Events[1].Description
                    </p>
                    <span class="cd-date">@Model.Events[1].StartTime.ToString("y") - @Model.Events[1].EndTime.ToString("y")</span>
                </div> <!-- cd-timeline-content -->
            </div> <!-- cd-timeline-block -->

            <div class="cd-timeline-block" id="nfs-block">
                <div class="cd-timeline-img cd-picture">
                    <img src="~/images/work-icon.svg" alt="School">
